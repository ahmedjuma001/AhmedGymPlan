        pm: 'Upper Body A (Chest, Back, Biceps)'
      },
      2: {
        am: '20-min Bike + Abs',
        pm: 'Lower Body (Quads, Hamstrings, Glutes)'
      },
      3: {
        am: 'Incline Walk + Stretch',
        pm: 'Push Focus (Chest, Shoulders, Triceps)'
      },
      4: {
        am: '25-min Cycle + Abs',
        pm: 'Rest (Evening)'
      },
      5: {
        am: 'Rest',
        pm: 'Rest'
      },
      6: {
        am: 'Walk + Core Circuit',
        pm: 'Full Body Compound (Squat, Pull, Push)'
      }
    };

    const meals = {
      am: 'After: 3 eggs, 1 slice bread, cucumber, banana',
      snack: 'Midday: Greek yogurt or protein shake + almonds',
      pm: 'Before: Grilled chicken + rice + salad<br>After: Grilled fish or eggs + vegetables + bread'
    };

    const today = new Date();
    const day = today.getDay();
    document.getElementById("today-date").textContent = `Today's Plan - ${today.toDateString()}`;

    const todayTable = document.getElementById("today-content");
    todayTable.innerHTML = `
      <tr><td>Morning</td><td>${plans[day].am}</td><td>${meals.am}</td></tr>
      <tr><td>Snack</td><td>—</td><td>${meals.snack}</td></tr>
      <tr><td>Evening</td><td>${plans[day].pm}</td><td>${meals.pm}</td></tr>
    `;
